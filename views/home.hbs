    <script>
    // Display stored email if user is signed in
    document.addEventListener('DOMContentLoaded', (event) => {
            const storedEmail = localStorage.getItem('userEmail');
            if (storedEmail) {
                const signedInMessage = document.createElement('div');
                signedInMessage.id = 'signedInMessage';
                signedInMessage.textContent = `${storedEmail}`;
                signedInMessage.style.position = 'absolute';
                signedInMessage.style.top = '10px';
                signedInMessage.style.right = '10px';
                signedInMessage.style.backgroundColor = '#FF5700';
                signedInMessage.style.color = 'white';
                signedInMessage.style.padding = '10px';
                signedInMessage.style.borderRadius = '5px';
                document.body.appendChild(signedInMessage);
            }
        });
    </script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <!-- Button to download pdf for user -->
    <button onclick="downloadPDF()" class="w-full py-2 px-4 button-style center-text" style="width: 150px; height: 23px; font-size: 14px; font-weight: bold; border-radius: 10px; margin-left: 11%; border-radius: 6px;">Download PDF</button>
